{
  "manifest_version": 3,
  "name": "Kaluwal Image Downloader",
  "version": "1.2",
  "description": "Find, browse, convert and download images from any webpage.",
  "permissions": ["activeTab", "downloads", "storage", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}